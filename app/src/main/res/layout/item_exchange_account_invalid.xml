<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="exchange"
            type="jp.maskedronin.bitwatcher.domain.valueobject.Exchange" />

        <variable
            name="viewModel"
            type="jp.maskedronin.bitwatcher.presentation.settings.ExchangeAccountRecyclerAdapter.ViewHolder.AccountInvalid.ViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:onClick="@{() -> viewModel.onEditIconClick(exchange)}"
        android:orientation="horizontal">

        <ImageView
            style="@style/Widget.bitWatcher.ImageView.Icon.Error"
            android:layout_width="@dimen/icon_normal"
            android:layout_height="@dimen/icon_normal" />

        <Space
            android:layout_width="@dimen/spacing_small"
            android:layout_height="wrap_content" />

        <TextView
            style="@style/Widget.bitWatcher.TextView.Invalid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{exchange.canonicalName}"
            android:textSize="@dimen/font_large"
            tools:text="bitFlyer" />

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageView
            style="@style/Widget.bitWatcher.ImageView.Icon.Edit"
            android:layout_width="@dimen/icon_normal"
            android:layout_height="@dimen/icon_normal" />

        <Space
            android:layout_width="@dimen/spacing_normal"
            android:layout_height="wrap_content" />

        <ImageView
            style="@style/Widget.bitWatcher.ImageView.Icon.Delete"
            android:layout_width="@dimen/icon_normal"
            android:layout_height="@dimen/icon_normal"
            android:onClick="@{() -> viewModel.onDeleteIconClick(exchange)}" />
    </LinearLayout>
</layout>